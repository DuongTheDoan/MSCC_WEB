@{
    Layout = "~/Views/Shared/LayoutTrangChu.cshtml";
}
<div class="container">

	<div class="row" style="margin-top:50px;">
		<div class="col-lg-6 col-sm-6 col-md-6 col-xs-12 col-md-offset-3">
			@if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "email-exists")
			{
				<div class="alert alert-danger">Email đã tồn tại</div>
			}
			@if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "success")
			{
				<div class="alert alert-danger">Đăng ký thành công</div>
			}
			<div class=" main-content-area">
				<div class="wrap-login-item ">
					<div class="register-form form-item ">
						<form class="form-stl" action="/Account/RegisterPost" name="frm-login" method="post">
							<fieldset class="wrap-title">
								<h3 class="form-title">Create an account</h3>
								<h4 class="form-subtitle">Personal infomation</h4>
							</fieldset>
							<fieldset class="wrap-input">
								<label for="frm-reg-email">Email Address*</label>
								<input type="email" id="frm-reg-email" name="Email" required placeholder="Input your Email address">
							</fieldset>
							<fieldset class="wrap-input">
								<label for="frm-reg-password">Password*</label>
								<input type="password" id="frm-reg-password" name="Password" required placeholder="Input your Password">
							</fieldset>
							<fieldset class="wrap-input">
								<label for="frm-reg-lname">Name*</label>
								<input type="text" id="frm-reg-lname" name="Name" required placeholder="Input your Name*">
							</fieldset>
							<fieldset class="wrap-input">
								<label for="frm-reg-lphone">Phone*</label>
								<input type="text" id="frm-reg-lphone" name="Phone" required placeholder="Input your Phone*">
							</fieldset>
							<fieldset class="wrap-input">
								<label for="frm-reg-address">Address*</label>
								<input type="text" id="frm-reg-address" name="Address" required placeholder="Input your Address">
							</fieldset>
							<input type="submit" class="btn btn-sign" value="Register" name="register">
						</form>
					</div>
				</div>
			</div><!--end main products area-->
		</div>
	</div><!--end row-->

</div><!--end container-->